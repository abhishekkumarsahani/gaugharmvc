@model IEnumerable<GauGhar.Controllers.ExpenseController.CategorySummary>
@{
    ViewData["Title"] = "Expense Summary";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-pie-chart me-2"></i>Expense Summary
        </h1>
        <div class="d-flex">
            <div class="input-group me-2" style="width: 200px;">
                <select class="form-control" id="monthSelect">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(ViewBag.Month == i)">@(new DateTime(2024, i, 1).ToString("MMMM"))</option>
                    }
                </select>
                <select class="form-control" id="yearSelect" style="width: 100px;">
                    @for (int i = 2022; i <= 2024; i++)
                    {
                        <option value="@i" selected="@(ViewBag.Year == i)">@i</option>
                    }
                </select>
                <button class="btn btn-outline-primary" type="button" id="goToSummary">
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Expenses
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Total Expenses
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                Rs. @ViewBag.TotalExpenses?.ToString("N2")
                            </div>
                            <div class="mt-2">
                                <span class="text-xs">Month: @ViewBag.MonthName @ViewBag.Year</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-cash-coin fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Categories
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count()
                            </div>
                            <div class="mt-2">
                                <span class="text-xs">Days with expenses: @ViewBag.DailyExpenses?.Count</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Expense by Category Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-table me-2"></i>Expenses by Category - @ViewBag.MonthName @ViewBag.Year
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="categoryTable">
                    <thead class="table-light">
                        <tr>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Percentage</th>
                            <th>Records</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var summary in Model)
                        {
                            var percentage = (summary.TotalAmount / ViewBag.TotalExpenses) * 100;
                            <tr>
                                <td>
                                    <span class="badge @GetCategoryBadge(summary.Category?.Name)">
                                        @summary.Category?.Name
                                    </span>
                                </td>
                                <td class="text-end fw-bold text-danger">
                                    Rs. @summary.TotalAmount.ToString("N2")
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @GetCategoryProgressBar(summary.Category?.Name)"
                                             role="progressbar"
                                             style="width: @percentage%;"
                                             aria-valuenow="@percentage"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @percentage.ToString("0.0")%
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">@summary.Count</td>
                                <td>
                                    @if (percentage > 30)
                                    {
                                        <span class="badge bg-danger">High</span>
                                    }
                                    else if (percentage > 15)
                                    {
                                        <span class="badge bg-warning">Medium</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Low</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="bi bi-pie-chart display-4 d-block mb-2"></i>
                                    No expense records found for this month.
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.Any())
                    {
                        <tfoot class="table-light">
                            <tr>
                                <th class="text-end">Total:</th>
                                <th class="text-end">Rs. @ViewBag.TotalExpenses?.ToString("N2")</th>
                                <th>100%</th>
                                <th class="text-center">@Model.Sum(s => s.Count)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Daily Expense Chart -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-graph-up me-2"></i>Daily Expenses - @ViewBag.MonthName @ViewBag.Year
            </h6>
        </div>
        <div class="card-body">
            <div class="chart-area">
                <canvas id="expenseChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetCategoryBadge(string categoryName)
    {
        return categoryName switch
        {
            "Fodder" => "bg-success",
            "Medicine" => "bg-danger",
            "Staff Salary" => "bg-primary",
            "Electricity" => "bg-warning",
            "Water" => "bg-info",
            "Maintenance" => "bg-secondary",
            "Transport" => "bg-dark",
            _ => "bg-light text-dark"
        };
    }

    string GetCategoryProgressBar(string categoryName)
    {
        return categoryName switch
        {
            "Fodder" => "bg-success",
            "Medicine" => "bg-danger",
            "Staff Salary" => "bg-primary",
            "Electricity" => "bg-warning",
            "Water" => "bg-info",
            "Maintenance" => "bg-secondary",
            "Transport" => "bg-dark",
            _ => "bg-light"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#categoryTable').DataTable({
                pageLength: 10,
                responsive: true,
                order: [[1, 'desc']],
                language: {
                    search: "Search categories:",
                    lengthMenu: "Show _MENU_ categories per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ categories",
                    infoEmpty: "No categories found",
                    infoFiltered: "(filtered from _MAX_ total categories)"
                }
            });

            // Month/Year navigation
            $('#goToSummary').click(function () {
                var month = $('#monthSelect').val();
                var year = $('#yearSelect').val();
                window.location.href = '@Url.Action("Summary", "Expense")?year=' + year + '&month=' + month;
            });

            // Create chart
            createExpenseChart();
        });

        function createExpenseChart() {
            var ctx = document.getElementById('expenseChart').getContext('2d');
            var dates = @Html.Raw(Json.Serialize(((IEnumerable<dynamic>)ViewBag.DailyExpenses).Select(d => d.Date.ToString("dd")).ToList()));
            var expenseData = @Html.Raw(Json.Serialize(((IEnumerable<dynamic>)ViewBag.DailyExpenses).Select(d => (decimal)d.TotalAmount).ToList()));
            var chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Daily Expenses (Rs.)',
                        data: expenseData,
                        backgroundColor: 'rgba(255, 99, 132, 0.6)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Expense Amount (Rs.)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Day of Month'
                            }
                        }
                    }
                }
            });
        }
    </script>
}