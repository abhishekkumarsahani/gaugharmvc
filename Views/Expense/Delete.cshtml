@model GauGhar.Models.Expense
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Expense
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-octagon me-2"></i>Warning!
                    </h5>
                    <p>Are you sure you want to delete this expense record? This action cannot be undone.</p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Expense Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Date:</dt>
                            <dd class="col-sm-8">@Model.ExpenseDate.ToString("dd-MMM-yyyy")</dd>

                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.ExpenseCategory?.Name == "Fodder" ? "bg-success" :
                                                  Model.ExpenseCategory?.Name == "Medicine" ? "bg-danger" :
                                                  Model.ExpenseCategory?.Name == "Staff Salary" ? "bg-primary" :
                                                  Model.ExpenseCategory?.Name == "Electricity" ? "bg-warning" : "bg-secondary")">
                                    @Model.ExpenseCategory?.Name
                                </span>
                            </dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>

                            <dt class="col-sm-4">Amount:</dt>
                            <dd class="col-sm-8 fw-bold text-danger">
                                Rs. @Model.Amount.ToString("N2")
                            </dd>

                            @if (!string.IsNullOrEmpty(Model.Remarks))
                            {
                                <dt class="col-sm-4">Remarks:</dt>
                                <dd class="col-sm-8">@Model.Remarks</dd>
                            }
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Expense
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>