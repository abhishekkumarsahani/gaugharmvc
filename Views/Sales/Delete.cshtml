@model GauGhar.Models.MilkSale
@{
    ViewData["Title"] = "Delete Sale";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Sale Record
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-octagon me-2"></i>Warning!
                    </h5>
                    <p>Are you sure you want to delete this sale record? This action cannot be undone.</p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Sale Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Date:</dt>
                            <dd class="col-sm-8">@Model.SaleDate.ToString("dd-MMM-yyyy")</dd>

                            <dt class="col-sm-4">Buyer:</dt>
                            <dd class="col-sm-8">@Model.BuyerName</dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.BuyerType == "Dairy" ? "bg-primary" : Model.BuyerType == "Hotel" ? "bg-success" : "bg-info")">
                                    @Model.BuyerType
                                </span>
                            </dd>

                            <dt class="col-sm-4">Quantity:</dt>
                            <dd class="col-sm-8">@Model.Quantity.ToString("0.00") L</dd>

                            <dt class="col-sm-4">Rate:</dt>
                            <dd class="col-sm-8">Rs. @Model.RatePerLiter.ToString("0.00")/L</dd>

                            <dt class="col-sm-4">Total:</dt>
                            <dd class="col-sm-8 fw-bold text-success">
                                Rs. @((Model.Quantity * Model.RatePerLiter).ToString("N2"))
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Sale
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>