@{
    ViewData["Title"] = "GauGhar - Dairy Farm Management";
    Layout = "_Layout"; // Use the main layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1500595046743-cd271d694d30?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 120px 0;
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(45deg, #4e73df, #224abe);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

            .feature-icon i {
                font-size: 24px;
                color: white;
            }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand text-primary fw-bold" href="/">
                <i class="bi bi-house-door-fill me-2"></i>GauGhar
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-primary ms-2" asp-controller="Account" asp-action="Register">Get Started</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">Modern Dairy Farm Management</h1>
            <p class="lead mb-4">Streamline your dairy operations with our comprehensive management system</p>
            <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Register">
                <i class="bi bi-rocket-takeoff me-2"></i>Start Free Trial
            </a>
            <a class="btn btn-outline-light btn-lg" href="#features">
                <i class="bi bi-info-circle me-2"></i>Learn More
            </a>
        </div>
    </section>

    <!-- Features -->
    <section id="features" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Everything You Need to Manage Your Dairy Farm</h2>
                <p class="text-muted">Comprehensive features for modern dairy farming</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mx-auto">
                            <i class="bi bi-cow"></i>
                        </div>
                        <h4>Cow Management</h4>
                        <p class="text-muted">Track individual cows, health status, breeding cycles, and more.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mx-auto">
                            <i class="bi bi-droplet"></i>
                        </div>
                        <h4>Milk Production</h4>
                        <p class="text-muted">Record daily milk production with morning/evening entries.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mx-auto">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h4>Financial Reports</h4>
                        <p class="text-muted">Generate profit/loss reports, expense tracking, and sales analysis.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>GauGhar</h5>
                    <p class="text-muted">Complete dairy farm management solution for modern farmers.</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0">&copy; @DateTime.Now.Year GauGhar. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>