@model GauGhar.Models.Cow
@{
    ViewData["Title"] = "Delete Cow";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Cow
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-octagon me-2"></i>Warning!
                    </h5>
                    <p>Are you sure you want to delete this cow? This action cannot be undone.</p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Cow Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Tag Number:</dt>
                            <dd class="col-sm-8">@Model.TagNumber</dd>

                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Breed:</dt>
                            <dd class="col-sm-8">@Model.Breed</dd>

                            <dt class="col-sm-4">Age:</dt>
                            <dd class="col-sm-8">@Model.Age years</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Status == "Active" ? "bg-primary" : "bg-secondary")">
                                    @Model.Status
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Cow
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>